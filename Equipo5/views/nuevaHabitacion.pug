extends ./layout/index.pug 
block compartircontenido
    .p-4
    center.h1 #{pagina}
    .p-4
    main.container.mt-5 
        .row
            .col-md-12
                h2.d-block.w-100.text-center Hacer nueva reserva 
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col 
                .col-md-8
                    form(action="/nuevaHabitacion" method="POST" class="was-validated")
                        .form-group 
                            label(for="id_hbt") id_hbt
                            input#id_hbt(type="text", placeholder="Identificador" name="id_hbt", class="form-control", value=id_hbt ,readonly="readonly")
                        .form-group 
                            label(for="piso") Piso 
                            input#piso(type="text", placeholder="tu piso" name="piso", required minlength = "2"
                            ,class="form-control", value=piso)
                            .invalid-feedback Este campo no puede quedar vacío
                            .valid-feedback Valid.
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Nombre" name="nombre", required minlength = "2"
                            ,class="form-control", value=nombre)
                            .invalid-feedback Este campo no puede quedar vacío
                            .valid-feedback Valid.
                        .form-group 
                            label(for="id_htl") Hotel
                            select(name="id_htl", class="form-control")
                            // aqui se añade algo parecido a esto, para que pueda traer los datos de hotel
                                 each info in hola
                                    option(value=info.dato2) #{info.dato1} //
                        .form-group 
                            label
                            input.form-control(type="number", placeholder="Tiene refrigerador" value = refrigerador,name="refrigerador", required minlength = "1")
                            .invalid-feedback Este campo no puede quedar vacío
                            .valid-feedback Valid.
                        center
                            input.btn.btn-outline-success.mb-5(type="submit")